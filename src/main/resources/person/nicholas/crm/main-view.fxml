<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="person.nicholas.crm.controller.MainController">
    <center>

    </center>
   <top>
      <TabPane prefHeight="500.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Vendor">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView layoutX="14.0" layoutY="48.0" prefHeight="405.0" prefWidth="467.0" fx:id="vendorView">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Vendor ID" fx:id="vendorId"/>
                            <TableColumn prefWidth="75.0" text="Name" fx:id="businessName"/>
                              <TableColumn prefWidth="75.0" text="Score" fx:id="feedbackScore" />
                              <TableColumn prefWidth="75.0" text="Geographical Presence" fx:id="geographicalPresence" />
                          </columns>
                        </TableView>
                        <Button layoutX="440.0" layoutY="14.0" mnemonicParsing="false" text="Add" onAction="#onAddButtonClick" fx:id="addVendor"/>
                        <TextField id="onAddVendorName" layoutX="14.0" layoutY="14.0" prefHeight="27.0" prefWidth="194.0" promptText="Enter Vendor Name here" fx:id="addVendorField"/>
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab text="Customer">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView layoutX="14.0" layoutY="48.0" prefHeight="405.0" prefWidth="467.0">
                           <columns>
                              <TableColumn prefWidth="75.0" text="Vendor ID" />
                              <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Score" />
                              <TableColumn prefWidth="75.0" text="Vendor ID" />
                           </columns>
                        </TableView>
                        <Button layoutX="14.0" layoutY="13.0" mnemonicParsing="false" text="Add" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Product">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView layoutX="14.0" layoutY="48.0" prefHeight="405.0" prefWidth="467.0">
                           <columns>
                              <TableColumn prefWidth="75.0" text="Vendor ID" />
                              <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Score" />
                              <TableColumn prefWidth="75.0" text="Vendor ID" />
                           </columns>
                        </TableView>
                        <Button layoutX="14.0" layoutY="13.0" mnemonicParsing="false" text="Add" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Transaction">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView layoutX="14.0" layoutY="48.0" prefHeight="405.0" prefWidth="467.0">
                           <columns>
                              <TableColumn prefWidth="75.0" text="Vendor ID" />
                              <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Score" />
                              <TableColumn prefWidth="75.0" text="Vendor ID" />
                           </columns>
                        </TableView>
                        <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Purchase" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </top>
</BorderPane>
